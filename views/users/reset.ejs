<% layout("/layouts/boilerplate") %>






<div class="row mt-5">
    <h1 class="col-6 offset-3">Reset Password</h1>
    
    <div class="col-6  offset-3">
        
        <form action="/reset" method="POST" class="needs-validation" novalidate>
            
            <div class="mb-3 mt-3">
                <label for="email" class="form-label">
                   Enter your Email
                </label>
                <input type="email" name="email" id="email" class="form-control" required>
                <div class="invalid-feedback">Cannot be empty!</div>
            </div>


            <div>
                <button class="btn btn-success">Send Reset Link</button>
            </div>

        </form>
    </div>
</div>